<h1>Your Cart</h1>
<% if @cart.empty? %>
    <p> Your cart is empty</p>
<%end%>

<% total = 0 %>

<table class="cart">
    <tr>
        <td class="legend"></td>
        <td class="legend">Item</td>
        <td class="legend">Price</td>
        <td class="legend">Qty</td>
        <td class="legend">Total</td>
    </tr>
    
    <%# @cart.each do |id, quantity| %>
    <%# item = Item.find_by_id(id) %>
    <tr>
        <td>
            <div class="image">
                <%#= link_to (image_tag item.item_url, :style => "height:40px"), item.item_url %>
            </div>
        </td>
        <td class="title"><%#= link_to item.title, item %></td>
        <td class="price"><%#= number_to_currency(item.price, :unit => "€") %></td>
        <td class="quantity"><%#= quantity %></td>
        <td class="price"><%#= number_to_currency(quantity * item.price, :unit => "€") %></td>
    </tr>
    <%# total += quantity * item.price%>
    <%# end %>
    <tr>
        <td colspan="5">
            <div class="total">Total:</div>
        </td>
        <td>
            <div class="price">
                <%= number_to_currency(total, :unit => "€")%>
            </div>
        </td>
    </tr>
    </table>
    <p>
        <%= link_to "Continue Shopping", :controller => :items %>
    </p>
