<h1>Your Cart</h1>
<% if @cart.empty? %>
    <p> Your cart is empty</p>
<%end%>

<% total = 0 %>

<table class="cart">
    <tr>
        <td class="legend"></td>
        <td class="legend">Item</td>
        <td class="legend">Price</td>
        <td class="legend">Qty</td>
        <td class="legend">Total</td>
    </tr>
    
<% @cart.each do |id,quantity| %>
    <% item = Item.find_by_id(id) %>
    <tr>
    <td>
        <div class="image">
            <%= link_to item_path(:image_url), item %>
        </div>
    </td>
    <td class="title"><%= link_to item_path(:title), item %></td>
    <td class="price"><%= item_path(:price) %></td>
    <td class="quantity"><%= quantity %></td>
    <td class="price"><%= quantity * item_path(:price).to_i %></td>
    </tr>
    <% total += quantity * item_path(:price).to_i %>
    <% end %>
    
<tr>
    <td colspan="4">
        <div class="total">Total:</div>
    </td>
    <td>
        <div class="price"><%= number_to_currency(total, :unit => "â‚¬")%></div>
    </td>
</tr>
</table>
<p>
    <%= link_to "Continue Shopping", :controller => :items %>
</p>